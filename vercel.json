{
    "version": 2,
    "functions": {
        "api/vercel-serverless.js": {
            "includeFiles": [
                "routes/**",
                "controllers/**",
                "public/**",
                "views/**"
            ]
        }
    },
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/api/vercel-serverless.js"
        }
    ]
}